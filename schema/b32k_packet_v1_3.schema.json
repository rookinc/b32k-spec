{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "B32k Packet v1.3",
  "type": "object",
  "required": [
    "spec",
    "sha256",
    "sha256_b64",
    "human_anchor",
    "sig"
  ],
  "properties": {
    "spec": {
      "type": "object",
      "required": [
        "version"
      ],
      "properties": {
        "version": {
          "type": "string"
        }
      }
    },
    "operators": {
      "type": "string"
    },
    "seed": {
      "type": [
        "string",
        "object"
      ]
    },
    "sha256": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$"
    },
    "sha256_b64": {
      "type": "string"
    },
    "human_anchor": {
      "type": "object",
      "required": [
        "descriptor",
        "value"
      ],
      "properties": {
        "descriptor": {
          "type": "string"
        },
        "value": {
          "type": "string"
        },
        "public_key_binding": {
          "type": "object",
          "required": [
            "algo",
            "public_key_format",
            "public_key_b64"
          ],
          "properties": {
            "algo": {
              "type": "string",
              "enum": [
                "ed25519"
              ]
            },
            "public_key_format": {
              "type": "string"
            },
            "public_key_b64": {
              "type": "string"
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "authorship_signature": {
      "type": "object",
      "required": [
        "algo",
        "scheme",
        "signed_field",
        "message_hex",
        "sig_b64"
      ],
      "properties": {
        "algo": {
          "type": "string",
          "enum": [
            "ed25519"
          ]
        },
        "scheme": {
          "type": "string",
          "enum": [
            "minisign"
          ]
        },
        "signed_field": {
          "type": "string",
          "enum": [
            "sha256",
            "seed32.hex"
          ]
        },
        "message_hex": {
          "type": "string",
          "pattern": "^[0-9a-f]{64}$"
        },
        "sig_b64": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "sig": {
      "type": "string"
    }
  },
  "additionalProperties": true
}